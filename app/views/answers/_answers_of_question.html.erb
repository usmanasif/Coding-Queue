<!--##################### First loop ###########################################-->

<% @answer_of_question.each do |ans| %>

    <% if ans.tick_status == 1%>
    <div class="q-post">
      <div class="q-top">
        <div class="counter-holder">
          <ul class="counter-nav">
            <li><span class="answer_votes_<%= ans.id%>">Votes:<%= ans.votes.sum(:status) %> </span></li>
          </ul>
          <strong class="by-date"> <span class="u-name"><a href="#"><%= ans.user.email %></a> 245</span>
            <span>Asked<span class="ago-days"> <%= time_ago_in_words(ans.created_at) %> ago</span></span>
          </strong>
        </div>
        <div class="middle-holder">
          <%= render :partial => 'answer_vote_rating'  %>
          <div class="user-question">
            <span class="user-img"> <%= image_tag avatar_url(ans.user) %></span>
            <span class="post-heading"><%= raw(ans.answer) %></span>
            <!--Start --Comment-List -- Start-->
            <div class="comment-holder">
              <div class="comment-copy-Answer<%= ans.id%>">

                <input type="hidden" name="comment-question-id" id="comment-question-id" value='<%= ans.id %>' />

                <% @comments.each do |comment| %>
                    <tr>
                      <% logger.debug "Q-Comment_Q" * 8 %>
                      <% logger.debug comment.inspect %>
                      <% logger.debug  %>
                      <% logger.debug %>
                      <% logger.debug " End Q End "*15 %>

                      <% if comment.commentable_id == ans.id && comment.commentable_type == "Answer"%>
                        <div class="inner-c">

                          <% if current_user.present? && current_user.id == comment.user_id %>
                              <%= best_in_place comment, :description, :path => comment_path(answer_id: comment.commentable_id, id: comment) %>

                          <% else %>
                              <span><%=  comment.description %> </span>
                          <% end %>
                          <span class="by-post-user">
                            <a href="#" class="us-name"> <%= comment.user.email %></a>
                            <a href="#" class="by-date-user">Jan3 '10 at 23:56 <%= time_ago_in_words(comment.created_at) %></a> <img src="/assets/comment-edit.png">
                             </span>
                        </div>

                    <% end %>

                <% end %>

              </div>

              <div class="create-comment">
                <%= form_for  @comment, :url =>  comments_path(answer_id: ans.id), :html => { :id => "new_comment_#{ans.id}"} do |f| %>
                    <% if @comment.errors.any? %>
                        <div id="errorExplanation">
                          <h2><%= pluralize(@comment.errors.count, "error") %> prohibited
                            this post from being saved:</h2>
                          <ul>
                            <% @comment.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                            <% end %>
                          </ul>
                        </div>
                    <% end %>

                    <div class="txt-field4">

                      <%= f.text_field :description, :class=> "answer_comment" %>
                    </div>

                    <%= f.submit :class => "comment-btn create-btn" %>

                <% end %>

              </div>
            </div>

          </div>
        </div>
      </div>
      <div class="q-btm">&nbsp;</div>
    </div>
<% end %>
<% end %>

<!--##################### END First Loop ###########################################-->


