<!--/////////////////////////////////////////////--Question --///////Code for the answer page/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
<div id="wrapper">
  <section id="main">
    <article id="content">
      <div class="q-post-holder">
        <%= render :partial => 'question' %>

        <!--////////////////////////////// -----Answer to the question -----------------////////////////////////////////////////////////////////////////////////////////////-->
        <div class="nav-holder">
          <ul class="active-question align-left">
            <li><a href="#" class="active"> <%= @question.answers.count %>  answers</a></li>
          </ul>
          <ul class="active-question">
            <li><a href="#">newest</a></li>
            <li><a href="#">votes</a></li>
            <li><a href="#">oldest</a></li>
          </ul>
        </div>
        <%= render :partial => 'answers_of_question' %>
        <div class="testing">
          <div class="voting_thought_ajax">
            <div class="class_with_status_tick">
              <% @answer_of_question && @answer_of_question.each do |ans| %>
                  <% if ans.tick_status == 1 %>
                      <div class="q-post">
                        <div class="q-top">
                          <div class="counter-holder">
                            <ul class="counter-nav">
                              <li><span class="answer_votes_<%= ans.id %>">Votes:<%= ans.votes.sum(:status) %> </span>
                              </li>
                            </ul>
                            <strong class="by-date"> <span class="u-name"><a href="#">ans.user.id</a> ans.user.rating</span>
                              <span>Asked<span class="ago-days"> <%= time_ago_in_words(ans.created_at) %>
                                ago</span></span>
                            </strong>

                          </div>
                          <%= render :partial => 'answer_with_comments', :locals => {:ans => ans} %>
                        </div>
                      </div>
                  <% end %>
              <% end %>

              <!--//////////////////////////////////////////////answer with votes(desc) shuru /////////////////////////////////////////////////////////////////////-->


              <%#= render :partial => 'vote_rating' %>
            </div>
          </div>

          <!--////////////////////////////////---End of answer to the question --------////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->


          <%= render :partial => 'answer_editor' %>
        </div>
    </article>

    <aside id="sidebar">
      <div class="stay-us"><span class="stay-heading">share this on</span>
        <ul class="social-icon">
          <li><a href="#" class="twitter">twitter</a></li>
          <li><a href="#" class="facebook">facebook</a></li>
          <li><a href="#" class="messenger">messenger</a></li>
        </ul>
        <span class="stay-heading">stay in touch</span>

        <div class="facebook-plugin"><img src="/assets/coding-stack-img.png" width="271" height="60" alt="facebook">
        </div>
      </div>
      <%= render :partial => 'shared/tags_all' %>
    </aside>
  </section>
